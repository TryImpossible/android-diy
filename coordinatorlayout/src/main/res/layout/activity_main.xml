<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScrollLayoutScrollFlags"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_snap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SnapLayoutScrollFlags"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_enter_always"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EnterAlwaysLayoutScrollFlags"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_enter_always_collapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EnterAlwaysCollapsedLayoutScrollFlags"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_exit_until_collapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ExitUntilCollapsedLayoutScrollFlags"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_collapsingToolbarLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CollapsingToolbarLayout"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_move_behavior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MoveBehavior"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_scroller_behavior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScrollerBehavior"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_zoom_behavior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZoomBehavior"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_zhihu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZhiHu"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>