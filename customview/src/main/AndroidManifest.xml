<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barry.customview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".canvas.DrawOvalActivity" />
        <activity android:name=".canvas.DrawCircleActivity" />
        <activity android:name=".canvas.DrawRectActivity" />
        <activity android:name=".canvas.DrawLineActivity" />
        <activity android:name=".canvas.DrawPointActivity" />
        <activity android:name=".canvas.DrawTextActivity" />
        <activity android:name=".canvas.DrawARGBActivity" />
        <activity android:name=".canvas.DrawAxisActivity" />
        <activity android:name=".canvas.CanvasShowActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>