<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".canvas.CanvasShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_draw_axis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绘制坐标系" />

        <Button
            android:id="@+id/btn_draw_argb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="drawARGB"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_draw_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="drawText"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_draw_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="drawPoint"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_draw_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="drawLine"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>