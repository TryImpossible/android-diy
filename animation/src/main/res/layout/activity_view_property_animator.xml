<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewproperty.ViewPropertyAnimatorActivity">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_animator_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_animator_2" />

    <Button
        android:id="@+id/btn_animator_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_animator_1"
        app:layout_constraintRight_toLeftOf="@id/btn_animator_3" />

    <Button
        android:id="@+id/btn_animator_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_animator_2"
        app:layout_constraintRight_toLeftOf="@id/btn_animator_4" />

    <Button
        android:id="@+id/btn_animator_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_animator_3"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_animator_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画5"
        app:layout_constraintBottom_toTopOf="@id/btn_animator_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_animator_3"
        app:layout_constraintRight_toLeftOf="@id/btn_animator_6" />

    <Button
        android:id="@+id/btn_animator_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画6"
        app:layout_constraintBottom_toBottomOf="@id/btn_animator_5"
        app:layout_constraintLeft_toRightOf="@id/btn_animator_5"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>