<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frame动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translate动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_alpha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alpha动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scale动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rotate动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_ani_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AnimationSet联合动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_interpolator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="动画插值器"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_custom_interpolator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义动画插值器"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_value_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ValueAnimator"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_object_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_custom_animator_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义ObjectAnimator属性"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_full_animator_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ObjectAnimator全面解析"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_animator_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AnimatorSet联合动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_default_layout_transition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="默认的LayoutTransition动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_custom_layout_transition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义LayoutTransition动画"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_share_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="共享元素动画"
            android:textAllCaps="false" />
    </LinearLayout>

</ScrollView>