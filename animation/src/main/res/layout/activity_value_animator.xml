<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".property.ValueAnimatorActivity">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="颜色渐变"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ofProperty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ofProperty"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_ofInt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_ofFloat" />

    <Button
        android:id="@+id/btn_ofInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ofInt"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_ofFloat" />

    <Button
        android:id="@+id/btn_ofFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ofFloat"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_ofInt"
        app:layout_constraintLeft_toRightOf="@id/btn_ofInt"
        app:layout_constraintRight_toLeftOf="@id/btn_ofArgb" />

    <Button
        android:id="@+id/btn_ofArgb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ofArgb"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_ofFloat"
        app:layout_constraintLeft_toRightOf="@id/btn_ofFloat"
        app:layout_constraintRight_toLeftOf="@id/btn_ofObject" />

    <Button
        android:id="@+id/btn_ofObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ofObject"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_ofArgb"
        app:layout_constraintLeft_toRightOf="@id/btn_ofArgb"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>